{
    "name": "rpg-calc",
    "version": "1.0.0",
    "scripts": {
        "dev-client": "cd client && npm start",
        "dev-server": "cd server && npm run start-dev",
        "start-dev": "concurrently npm:dev-server npm:dev-client",
        "start": "cd server && npm install && node index.js",
        "heroku-postbuild": "cd client && npm install && npm run build"
    },
    "devDependencies": {
        "concurrently": "^7.0.0"
    }
}
